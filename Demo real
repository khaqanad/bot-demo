<body>
<div class="chat-container">
    <div class="chat-messages" id="chatMessages">
        <div class="message bot" id="welcomeMessage">üëã Hello! I‚Äôm your assistant bot. You can use the buttons below or type a message.</div>
    </div>
    <div class="buttons">
        <button class="quick-btn" onclick="handleInput('Check available slots')">Check available slots</button>
        <button class="quick-btn" onclick="handleInput('Book a test')">Book a test</button>
        <button class="quick-btn" onclick="handleInput('Contact support')">Contact support</button>
    </div>
    <div class="chat-input">
        <input type="text" id="userInput" placeholder="Type your message...">
        <button onclick="sendMessage()">Send</button>
    </div>
</div>

<script>
const chatMessages = document.getElementById('chatMessages');

function appendMessage(message, sender) {
    const div = document.createElement('div');
    div.className = `message ${sender}`;
    div.textContent = message;
    chatMessages.appendChild(div);
    chatMessages.scrollTop = chatMessages.scrollHeight;
}

// Simulate typing effect
function botReply(message) {
    const typing = document.createElement('div');
    typing.className = 'message bot';
    typing.textContent = 'Typing...';
    chatMessages.appendChild(typing);
    chatMessages.scrollTop = chatMessages.scrollHeight;

    setTimeout(() => {
        chatMessages.removeChild(typing);
        appendMessage(message, 'bot');
    }, 800 + Math.random() * 800);
}

function handleInput(input) {
    appendMessage(input, 'user');

    input = input.toLowerCase();
    if(input.includes('slots')) {
        botReply('üóìÔ∏è Available slots are: Monday 10AM, Tuesday 2PM, Friday 4PM.');
    } else if(input.includes('book')) {
        botReply('‚úÖ Your test has been booked! We will send a confirmation email.');
    } else if(input.includes('support')) {
        botReply('üìû You can contact support at support@example.com or call 123-456-7890.');
    } else if(input.includes('hello') || input.includes('hi')) {
        botReply('üëã Hello! How can I assist you today?');
    } else {
        botReply('ü§î Sorry, I did not understand that. You can use the buttons below or type one of the suggested actions.');
    }
}

function sendMessage() {
    const inputBox = document.getElementById('userInput');
    const input = inputBox.value.trim();
    if(input) {
        handleInput(input);
        inputBox.value = '';
    }
}

</script>
